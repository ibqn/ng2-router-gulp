{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "removeComments": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "compileOnSave": true,
    "files": [
        "builds/release/main-aot.ts",
        "builds/release/app.module.ts"
    ],
    "include": [
        "builds/release/*"
    ],
    "exclude": [
        "node_modules/**",
        "!node_modules/@types",
        "process/*",
        "**/main.ts"
    ],
    "angularCompilerOptions": {
        "genDir": ".",
        "skipMetadataEmit": true
    }
}
